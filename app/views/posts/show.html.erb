<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    <% if user_signed_in? %>
        Published: <%= time_tag(Date, @post.created_at.to_formatted_s(:long_ordinal)) %>
        <%= link_to 'Edit', edit_post_path(@post) %>
        <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>
</div>